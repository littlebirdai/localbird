{
  "name": "localbird",
  "version": "1.0.1",
  "description": "Screen capture with AI analysis and semantic search",
  "type": "module",
  "main": "./out/main/index.mjs",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@anthropic-ai/sdk": "^0.71.2",
    "@assistant-ui/react": "^0.11.53",
    "@assistant-ui/react-ai-sdk": "^1.1.20",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.3",
    "ai": "^6.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.7.3",
    "express": "^4.21.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.5.4",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.47",
    "puppeteer-core": "^24.34.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "build": {
    "appId": "com.localbird.app",
    "productName": "Localbird",
    "directories": {
      "output": "/tmp/localbird-dist"
    },
    "publish": {
      "provider": "github",
      "owner": "littlebirdai",
      "repo": "localbird"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": "Little Bird Software, LLC (ML63743965)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "../localbird-service",
          "to": "bin/localbird-service"
        },
        {
          "from": "bin/qdrant-${arch}",
          "to": "bin/qdrant-${arch}"
        },
        {
          "from": "resources/qdrant-config.yaml",
          "to": "qdrant-config.yaml"
        }
      ]
    },
    "afterPack": "build/afterPack.cjs",
    "afterSign": "build/notarize.cjs",
    "dmg": {
      "sign": false
    },
    "win": {
      "target": [
        "nsis"
      ],
      "sign": false,
      "extraResources": [
        {
          "from": "../LocalbirdCapture/bin/Debug/net8.0-windows10.0.19041.0/win-x64",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "../bin/qdrant-x64.exe",
          "to": "bin/qdrant-x64.exe"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ]
  }
}
